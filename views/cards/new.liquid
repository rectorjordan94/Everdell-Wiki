{% layout 'layout.liquid' %}
{% block content %}
<div class="container-sm">
    <form action="/cards" method="POST">
        <h2 class="mt-3 fw-bold">Create New Card</h2>
        <fieldset>
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text">Name</span>
            </div>
            <input type="text" class="form-control" placeholder="enter card name" name="name">
        </div>
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <label for="type" class="input-group-text">Rarity</label>
            </div>
            <select name="type" id="type" class="custom-select form-select">
                <option value="Common">Common</option>
                <option value="Unique">Unique</option>
            </select>
        </div>
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <label for="category" class="input-group-text">Category</label>
            </div>
            <select name="type" id="type" class="custom-select form-select">
                <option value="Critter">Critter</option>
                <option value="Construction">Construction</option>
            </select>
        </div>
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <label for="type" class="input-group-text">Type</label>
            </div>
            <select name="type" id="type" class="custom-select form-select">
                <option value="Tan Traveler">Tan Traveler</option>
                <option value="Green Production">Green Production</option>
                <option value="Red Destination">Red Destination</option>
                <option value="Blue Governance">Blue Governance</option>
                <option value="Purple Prosperity">Purple Prosperity</option>
            </select>
        </div>
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text">Points</span>
            </div>
            <input type="number" name="points" class="form-control" placeholder="enter card point value">
        </div>
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text">Cost</span>
            </div>
            <input type="string" name="cost" class="form-control" placeholder="enter card cost">
        </div>
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <label for="destination" class="input-group-text">Destination</label>
            </div>
            <select name="destination" id="destination" class="custom-select form-select">
                <option value="true">Yes</option>
                <option value="false">No</option>
            </select>
        </div>
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <label for="occupancy" class="input-group-text">Occupancy</label>
            </div>
            <select name="occupancy" id="occupancy" class="custom-select form-select">
                <option value="N/A">N/A</option>
                <option value="1">1</option>
                <option value="2">2</option>
            </select>
        </div>
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text">Paired With</span>
            </div>
            <input type="text" name="pairedWith" class="form-control" placeholder="enter card pair">
        </div>
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text p-4">Effect</span>
            </div>
            <textarea class="form-control" name="effect" placeholder="enter card effect"></textarea>
        </div>
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text p-4">Quote</span>
            </div>
            <textarea class="form-control" name="quote" placeholder="enter card quote"></textarea>
        </div>
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text">Image Url</span>
            </div>
            <input type="text" name="imgSrc" class="form-control" placeholder="enter image url">
        </div>
        </fieldset>
        <input type="submit" value="Create New Card" class="btn btn-success">
    </form>
</div>
{% endblock %}

{% comment %}
name: { type: String, required: true },
		rarity: { type: String, required: true },
        type: { type: Array, required: true },
		points: { type: Number, required: true },
		cost: { type: String, required: true },
		pairedWith: { type: String, required: true },
		effect: { type: String, required: true },
		quote: { type: String },
		destination: { type: Boolean },
		occupancy: { type: Number },
		imgSrc: { type: String },

        <label class="form-label">Name</label>
        <input 
            type="text" 
            name="name" 
            placeholder="enter card name"
            class="form-control"
        >
<label class="form-label">Body:</label>
            <input 
                type="text" 
                name="body" 
                placeholder="enter card body" 
                class="form-control"
            >
            <label class="form-label">Amount:</label>
            <input 
                type="number" 
                name="amount" 
                class="form-control"
            >
            <label class="form-label">Ready:</label>
            <input 
                type="checkbox" 
                name="ready" 
                class="form-check-input"
            >
{% endcomment %}