{% layout 'layout.liquid' %}
{% block content %}
<div class="container-md bg-white shadow">
    <form action="/cards/{{card.id}}?_method=PUT" method="POST">
        <h2 class="display-5 fw-bold ms-2 mt-3 text-black pt-2 mb-0">Edit {{card.name}}</h2>
        <hr class="border border-success border-1">
        <fieldset>
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text bg-success rounded-0 text-white fw-semibold">Name</span>
            </div>
            <input type="text" class="form-control rounded-0" value="{{ card.name }}" name="name">
        </div>
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <label for="type" class="input-group-text bg-success rounded-0 text-white fw-semibold">Rarity</label>
            </div>
            <select name="type" id="type" class="custom-select form-select rounded-0">
                <option value="Common" {% if card.type[0] == 'Common' %}
                                            selected
                                        {% endif %}
                >Common</option>
                <option value="Unique" {% if card.type[0] == 'Unique' %}
                                            selected
                                        {% endif %}
            >Unique</option>
            </select>
        </div>
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <label for="type" class="input-group-text bg-success rounded-0 text-white fw-semibold">Category</label>
            </div>
            <select name="type" id="critOrConst" class="custom-select form-select rounded-0">
                <option value="Critter"
                {% if card.type[1] == 'Critter' %}
                    selected
                {% endif %}
                >Critter</option>
                <option value="Construction"
                {% if card.type[1] == 'Construction' %}
                    selected
                {% endif %}
                >Construction</option>
            </select>
        </div>                                   
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <label for="type" class="input-group-text bg-success rounded-0 text-white fw-semibold">Type</label>
            </div>
            <select name="type" id="type" class="custom-select form-select rounded-0">
                <option value="Tan Traveler" 
                {% if card.type[2] == 'Tan Traveler' %}
                    selected
                {% endif %}
                >Tan Traveler</option>
                <option value="Green Production"
                {% if card.type[2] == 'Green Production' %}
                    selected
                {% endif %}
                >Green Production</option>
                <option value="Red Destination"
                {% if card.type[2] == 'Red Destination' %}
                    selected
                {% endif %}
                >Red Destination</option>
                <option value="Blue Governance"
                {% if card.type[2] == 'Blue Governance' %}
                    selected
                {% endif %}
                >Blue Governance</option>
                <option value="Purple Prosperity"
                {% if card.type[2] == 'Purple Prosperity' %}
                    selected
                {% endif %}
                >Purple Prosperity</option>
            </select>
        </div>
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text bg-success rounded-0 text-white fw-semibold">Points</span>
            </div>
            <input type="number" name="points" class="form-control rounded-0" value="{{ card.points }}">
        </div>
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text bg-success rounded-0 text-white fw-semibold">Cost</span>
            </div>
            <input type="string" name="cost" class="form-control rounded-0" value="{{ card.cost }}">
        </div>
        {% if card.destination %}
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <label for="destination" class="input-group-text bg-success rounded-0 text-white fw-semibold">Destination</label>
            </div>
            <select name="destination" id="destination" class="custom-select form-select rounded-0">
            <option value="true">{%if card.destination%}Yes</option>
        <option value="false">{% else %}No{% endif %}</option>
            </select>
        </div>
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <label for="occupancy" class="input-group-text bg-success rounded-0 text-white fw-semibold">Occupancy</label>
            </div>
            <select name="occupancy" id="occupancy" class="custom-select form-select rounded-0">
                <option value="1">{% if card.occupancy == 1 %}1{% endif %}</option>
                <option value="2">{% if card.occupancy == 2 %}2{% endif %}</option>
            </select>
        </div>
        {% endif %}
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text bg-success rounded-0 text-white fw-semibold">Paired With</span>
            </div>
            <input type="text" name="pairedWith" class="form-control rounded-0" value="{{ card.pairedWith }}">
        </div>
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text bg-success rounded-0 text-white fw-semibold p-4">Effect</span>
            </div>
            <textarea class="form-control rounded-0" name="effect">{{ card.effect }}</textarea>
        </div>
        {% if card.quote %}
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text bg-success rounded-0 text-white fw-semibold p-4">Quote</span>
            </div>
            <textarea class="form-control rounded-0" name="quote" id="quote">{{ card.quote }}</textarea>
        </div>
        {% endif %}
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text bg-success rounded-0 text-white fw-semibold">Image Url</span>
            </div>
            <input type="text" name="imgSrc" class="form-control rounded-0" 
            {% if card.imgSrc %}
            value="{{ card.imgSrc }}"
            {% endif %}>
        </div>
        </fieldset>
        <div class="d-grid gap-2 d-md-flex justify-content-md-end mb-2">
            <input type="submit" value="Edit {{ card.name }}" class="btn btn-success rounded-0 my-2 fw-bold shadow">
        </div>
    </form>
</div>

{% endblock %}