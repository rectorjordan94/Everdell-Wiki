{% comment %}
{% layout 'layout.liquid' %}
{% block content %}
<div class="container-sm">
    <form action="/cards?_method=PUT" method="POST">
        <fieldset>
            <legend>Create New Card</legend>
            <label class="form-label">Title: </label>
            <input 
                type="text" 
                name="title" 
                placeholder="{{ card.title }}"
                value="{{ card.title }}"
                class="form-control"
            >
            <label class="form-label">Body:</label>
            <input 
                type="text" 
                name="body" 
                placeholder="{{ card.body }}" 
                value="{{ card.body }}" 
                class="form-control"
            >
            <label class="form-label">Amount:</label>
            <input 
                type="number" 
                name="amount"
                value="{{ card.amount }}"
                class="form-control"
            >
            <label class="form-label">Ready:</label>
            <input 
                type="checkbox" 
                name="ready" 
                class="form-check-input"
                {% if card.ready %}
                    checked
                {% endif %}
            >
        </fieldset>
        <input type="submit" value="Edit Card" class="btn btn-success">
    </form>
</div>
{% endblock %}
{% endcomment %}

{% layout 'layout.liquid' %}
{% block content %}
<div class="container-sm">
    <form action="/cards/{{card.id}}?_method=PUT" method="POST">
        <h2 class="mt-3 fw-bold">Create New Card</h2>
        <fieldset>
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text">Name</span>
            </div>
            <input type="text" class="form-control" value="{{ card.name }}" name="name">
        </div>
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <label for="rarity" class="input-group-text">Rarity</label>
            </div>
            <select name="rarity" id="type" class="custom-select form-select">
                <option value="Common" {% if card.rarity == 'Common' %}
                                            selected
                                        {% endif %}
                >Common</option>
                <option value="Unique" {% if card.rarity == 'Unique' %}
                                            selected
                                        {% endif %}
            >Unique</option>
            </select>
        </div>
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <label for="type" class="input-group-text">Type</label>
            </div>
            <select name="type" id="type" class="custom-select form-select">
                <option value="Tan Traveler" 
                {% if card.type[0] == 'Tan Traveler' %}
                    selected
                {% endif %}
                >Tan Traveler</option>
                <option value="Green Production"
                {% if card.type[0] == 'Green Production' %}
                    selected
                {% endif %}
                >Green Production</option>
                <option value="Red Destination"
                {% if card.type[0] == 'Red Destination' %}
                    selected
                {% endif %}
                >Red Destination</option>
                <option value="Blue Governance"
                {% if card.type[0] == 'Blue Governance' %}
                    selected
                {% endif %}
                >Blue Governance</option>
                <option value="Purple Prosperity"
                {% if card.type[0] == 'Purple Prosperity' %}
                    selected
                {% endif %}
                >Purple Prosperity</option>
            </select>
        </div>
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <label for="category" class="input-group-text">Category</label>
            </div>
            <select name="type" id="type" class="custom-select form-select">
                <option value="Critter"
                {% if card.type[1] == 'Critter' %}
                    selected
                {% endif %}
                >Critter</option>
                <option value="Construction"
                {% if card.type[1] == 'Construction' %}
                    selected
                {% endif %}
                >Construction</option>
            </select>
        </div>
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text">Points</span>
            </div>
            <input type="number" name="points" class="form-control" value="{{ card.points }}">
        </div>
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text">Cost</span>
            </div>
            <input type="number" name="cost" class="form-control" value="{{ card.cost }}">
        </div>
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text">Paired With</span>
            </div>
            <input type="text" name="pairedWith" class="form-control" value="{{ card.pairedWith }}">
        </div>
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text p-4">Effect</span>
            </div>
            <textarea class="form-control" name="effect">{{ card.effect }}</textarea>
        </div>
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text p-4">Quote</span>
            </div>
            <textarea class="form-control" name="quote">{% if card.quote %}{{ card.quote }}{% endif %}</textarea>
        </div>
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text">Image Url</span>
            </div>
            <input type="text" name="imgSrc" class="form-control" 
            {% if card.imgSrc %}
            value="{{ card.imgSrc }}"
            {% endif %}>
        </div>
        </fieldset>
        <input type="submit" value="Edit {{ card.name }}" class="btn btn-success">
    </form>
</div>
{% endblock %}