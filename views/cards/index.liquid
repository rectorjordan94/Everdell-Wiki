{% layout 'layout.liquid'%}
{% block content %}
<div>
    <h2 class="display-6 fw-bold ms-4 mt-3 text-white">All Cards</h2>
    <div class="row mx-3">
        {% for card in cards %}
        <div class="card col-sm-2 p-0 m-2" >
            <div class="card-body p-0">
                <a href="/cards/{{ card.id }}">
                    <img src="{{ card.imgSrc }}" alt="card image" width="150" class="card-img h-100 w-100 border border-3">
                </a>
                {% comment %}
                <h5 class="card-title">
                    {{ card.type[0] }}
                </h5>
                <p class="card-text">
                    {{ card.rarity }} {{ card.type[1] }} Points: {{ card.points }}
                </p>
                <p class="card-text">
                    {{ card.effect }}
                </p>
                <a href="/cards/{{ card.id }}" class="btn btn-info">
                    View {{ card.name }}
                </a>
            {%endcomment%}
            </div>
        </div>
        {% endfor %}
    </div>
</div>
{% endblock %}

