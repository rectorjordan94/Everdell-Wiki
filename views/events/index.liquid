{% layout 'layout.liquid'%}
{% block content %}
<div>
    <h2 class="display-6 fw-bold ms-4 mt-3">All Events</h2>
    <div class="row mx-3">
        {% for event in events %}
        <div class="card col-sm-2 p-0 m-2" >
            <div class="card-body p-0">
                <p class="text-center mb-0 fw-bold mx-1 mt-1">{{ event.name }}</p>
                <a href="/events/{{event.id}}"><img src="{{ event.imgSrc }}" alt="card image" class="card-img w-75 h-75 mx-auto d-block mb-1"></a>
                
                {% comment %}
                <h5 class="card-title">
                    {{ card.type[0] }}
                </h5>
                <p class="card-text">
                    {{ card.rarity }} {{ card.type[1] }} Points: {{ card.points }}
                </p>
                <p class="card-text">
                    {{ card.effect }}
                </p>
                <a href="/cards/{{ card.id }}" class="btn btn-info">
                    View {{ card.name }}
                </a>
            {%endcomment%}
            </div>
        </div>
        {% endfor %}
    </div>
</div>
{% endblock %}

